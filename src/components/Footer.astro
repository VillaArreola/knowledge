---
const currentYear = new Date().getFullYear();
---

<footer class="main-footer">
  <!-- Decorative top border -->
  <div class="footer-border"></div>
  
  <div class="footer-content">
    <div class="footer-section">
      <div class="brand-section">
        <h3 class="brand-title">
          <span class="icon">🎓</span>
          Knowledge Base
        </h3>
        <p class="brand-description">
          Tu repositorio personal de conocimiento en tecnología, redes y ciberseguridad.
        </p>
        <div class="tech-badges">
          <span class="tech-badge">🔒 Cyber</span>
          <span class="tech-badge">🌐 Redes</span>
          <span class="tech-badge">💻 Tech</span>
        </div>
      </div>
    </div>
    
    <div class="footer-section">
      <h4 class="section-title">
        <span class="section-icon">🚀</span>
        Enlaces Rápidos
      </h4>
      <ul class="link-list">
        <li><a href="/redes/wifi" class="footer-link">
          <span class="link-icon">📡</span>
          Redes WiFi
        </a></li>
        <li><a href="/cyber/CIA" class="footer-link">
          <span class="link-icon">🛡️</span>
          Ciberseguridad
        </a></li>
        <li><a href="/cyber/criptografia" class="footer-link">
          <span class="link-icon">🔐</span>
          Criptografía
        </a></li>
        <li><a href="/cyber/pki" class="footer-link">
          <span class="link-icon">📜</span>
          PKI
        </a></li>
      </ul>
    </div>
    
    <div class="footer-section">
      <h4 class="section-title">
        <span class="section-icon">🔍</span>
        Explorar
      </h4>
      <ul class="link-list">
        <li><a href="/cyber/interactivo" class="footer-link">
          <span class="link-icon">🧪</span>
          Laboratorio
        </a></li>
        <li><a href="/cyber/nist" class="footer-link">
          <span class="link-icon">📋</span>
          NIST Framework
        </a></li>
        <li><a href="/" class="footer-link">
          <span class="link-icon">🏠</span>
          Dashboard
        </a></li>
        <li><a href="/plantilla" class="footer-link">
          <span class="link-icon">📄</span>
          Plantilla
        </a></li>
      </ul>
    </div>
  </div>
  
  <div class="footer-bottom">
    <div class="footer-bottom-content">
      <div class="copyright">
        <p>&copy; {currentYear} Knowledge Base. Construido para el aprendizaje continuo.</p>
      </div>
      <div class="powered-by">
        <span class="tech-stack">
          <span class="tech-item">
            <span class="tech-icon">🚀</span>
            Astro
          </span>
          <span class="divider">•</span>
          <span class="tech-item">
            <span class="tech-icon">🎨</span>
            Tailwind
          </span>
          <span class="divider">•</span>
          <span class="tech-item">
            <span class="tech-icon">❤️</span>
            Passion
          </span>
        </span>
      </div>
    </div>
  </div>
</footer>

<style>
  .main-footer {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    color: #e2e8f0;
    margin-top: auto;
    position: relative;
    overflow: hidden;
  }
  
  .footer-border {
    height: 4px;
    background: linear-gradient(90deg, 
      #3b82f6 0%, 
      #8b5cf6 25%, 
      #06b6d4 50%, 
      #10b981 75%, 
      #3b82f6 100%);
    background-size: 200% 100%;
    animation: shimmer 3s ease-in-out infinite;
  }
  
  @keyframes shimmer {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 2rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 3rem;
    position: relative;
  }
  
  .brand-section {
    padding-right: 1rem;
  }
  
  .brand-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #f8fafc;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .icon {
    font-size: 2rem;
    filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.5));
  }
  
  .brand-description {
    color: #cbd5e1;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
  
  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tech-badge {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #93c5fd;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.8rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }
  
  .section-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #f1f5f9;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .section-icon {
    font-size: 1.2rem;
  }
  
  .link-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .link-list li {
    margin-bottom: 0.75rem;
  }
  
  .footer-link {
    color: #cbd5e1;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0;
    transition: all 0.3s ease;
    border-radius: 0.375rem;
    font-size: 0.9rem;
  }
  
  .footer-link:hover {
    color: #f8fafc;
    transform: translateX(4px);
    background: rgba(59, 130, 246, 0.1);
    padding-left: 0.5rem;
  }
  
  .link-icon {
    font-size: 1rem;
    opacity: 0.8;
  }
  
  .footer-bottom {
    background: linear-gradient(135deg, #1e293b, #334155);
    border-top: 1px solid rgba(148, 163, 184, 0.1);
    padding: 1.5rem 0;
    backdrop-filter: blur(10px);
  }
  
  .footer-bottom-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .copyright p {
    margin: 0;
    color: #94a3b8;
    font-size: 0.9rem;
  }
  
  .tech-stack {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #94a3b8;
    font-size: 0.85rem;
  }
  
  .tech-item {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    transition: color 0.3s ease;
  }
  
  .tech-item:hover {
    color: #e2e8f0;
  }
  
  .tech-icon {
    font-size: 1rem;
  }
  
  .divider {
    color: #64748b;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    
    .brand-section {
      grid-column: 1 / -1;
      text-align: center;
      padding-right: 0;
      margin-bottom: 1rem;
    }
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 1rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
    
    .tech-stack {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .brand-title {
      font-size: 1.5rem;
    }
    
    .tech-badges {
      justify-content: center;
    }
    
    .footer-content {
      padding: 1.5rem 1rem;
    }
  }
</style>
