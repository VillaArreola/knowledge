<style>
  .main-footer {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    color: #e2e8f0;
    margin-top: auto;
    position: relative;
    overflow: hidden;
  }
  
  .footer-border {
    height: 4px;
    background: linear-gradient(90deg, 
      #3b82f6 0%, 
      #8b5cf6 25%, 
      #06b6d4 50%, 
      #10b981 75%, 
      #3b82f6 100%);
    background-size: 200% 100%;
    animation: shimmer 3s ease-in-out infinite;
  }
  
  @keyframes shimmer {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 2rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 3rem;
    position: relative;
  }
  
  .brand-section {
    padding-right: 1rem;
  }
  
  .brand-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #f8fafc;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .icon {
    font-size: 2rem;
    filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.5));
  }
  
  .brand-description {
    color: #cbd5e1;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
  
  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tech-badge {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #93c5fd;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.8rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .tech-badge:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .tech-badge a {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
  }

  .tech-badge a:hover {
    color: #ffffff;
    text-shadow: 0 0 8px rgba(59, 130, 246, 0.5);
  }
  
  .section-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #f1f5f9;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .section-icon {
    font-size: 1.2rem;
  }
  
  .link-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .link-list li {
    margin-bottom: 0.75rem;
  }
  
  .footer-link {
    color: #cbd5e1;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0;
    transition: all 0.3s ease;
    border-radius: 0.375rem;
    font-size: 0.9rem;
  }
  
  .footer-link:hover {
    color: #f8fafc;
    transform: translateX(4px);
    background: rgba(59, 130, 246, 0.1);
    padding-left: 0.5rem;
  }

  /* Estilo espec√≠fico para enlaces en el copyright */
  .copyright .footer-link {
    color: #3b82f6;
    font-weight: 600;
    display: inline;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .copyright .footer-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .copyright .footer-link:hover {
    color: #ffffff;
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.4);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    text-shadow: 0 0 8px rgba(59, 130, 246, 0.5);
  }

  .copyright .footer-link:hover::before {
    left: 100%;
  }

  .copyright .footer-link:active {
    transform: translateY(0);
    box-shadow: 0 2px 6px rgba(59, 130, 246, 0.4);
  }
  
  .link-icon {
    font-size: 1rem;
    opacity: 0.8;
  }
  
  .footer-bottom {
    background: linear-gradient(135deg, #1e293b, #334155);
    border-top: 1px solid rgba(148, 163, 184, 0.1);
    padding: 1.5rem 0;
    backdrop-filter: blur(10px);
  }
  
  .footer-bottom-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .copyright p {
    margin: 0;
    color: #94a3b8;
    font-size: 0.9rem;
  }
  
  .tech-stack {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #94a3b8;
    font-size: 0.85rem;
  }
  
  .tech-item {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    transition: color 0.3s ease;
  }
  
  .tech-item:hover {
    color: #e2e8f0;
  }

  .tech-item a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .tech-item a:hover {
    color: #ffffff;
    background: rgba(59, 130, 246, 0.1);
    text-shadow: 0 0 8px rgba(59, 130, 246, 0.5);
  }
  
  .tech-icon {
    font-size: 1rem;
  }
  
  .divider {
    color: #64748b;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    
    .brand-section {
      grid-column: 1 / -1;
      text-align: center;
      padding-right: 0;
      margin-bottom: 1rem;
    }
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 1rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
    
    .tech-stack {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1rem;
    }

    .footer-section {
        width: 100%;
    }

    .brand-title {
        font-size: 1.2rem;
        text-align: center;
    }

    .brand-description {
        font-size: 0.85rem;
        margin-bottom: 1rem;
    }

    .tech-badges {
        justify-content: center;
        flex-wrap: wrap;
    }

    .section-title {
        font-size: 1rem;
        text-align: center;
    }

    .link-list {
        padding: 0;
        text-align: center;
    }

    .footer-link {
        font-size: 0.8rem;
        padding: 0.25rem 0;
        justify-content: center;
    }

    .footer-bottom {
        padding: 1rem 0;
        text-align: center;
    }

    .copyright p {
        font-size: 0.75rem;
        text-align: center;
    }

    .tech-stack {
        font-size: 0.75rem;
        justify-content: center;
        text-align: center;
    }

    .footer-bottom-content {
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.5rem;
    }

    .copyright p {
        margin-bottom: 0.5rem;
    }

    .tech-stack {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
    }

    .tech-item {
        display: flex;
        align-items: center;
        justify-content: center;
    }
}
</style>
