<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Hover effects para tech icons
        const techItems = document.querySelectorAll('.tech-item');
        
        techItems.forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.1) translateY(-5px)';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1) translateY(0)';
            });
        });

        // Animaci√≥n de entrada para stats
        const statItems = document.querySelectorAll('.stat-item');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0) scale(1)';
                    }, index * 100);
                }
            });
        }, { threshold: 0.1 });

        statItems.forEach(item => {
            item.style.opacity = '0';
            item.style.transform = 'translateY(20px) scale(0.95)';
            item.style.transition = 'all 0.6s ease';
            observer.observe(item);
        });
    });

    // Funciones para las stats clickeables
    function showTemas() {
        // Scroll al hub de categor√≠as
        const categoriesTab = document.getElementById('categories-tab');
        if (categoriesTab) {
            categoriesTab.scrollIntoView({ 
                behavior: 'smooth' 
            });
        }
    }

    function showCertificaciones() {
        // Cambiar al tab de certificaciones
        const tabBtn = document.querySelector('[data-tab="certifications"]');
        const tabPanel = document.getElementById('certifications-tab');
        
        if (tabBtn && tabPanel) {
            // Activar tab
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-panel').forEach(panel => panel.classList.remove('active'));
            
            tabBtn.classList.add('active');
            tabPanel.classList.add('active');
            
            // Scroll suave
            tabPanel.scrollIntoView({ behavior: 'smooth' });
        }
    }

    function goToLaboratorio() {
        window.location.href = '/cyber/interactivo';
    }

    function showRandomTopic() {
        const topics = [
            { name: 'Criptograf√≠a AES', url: '/cyber/criptografia', icon: 'üîê' },
            { name: 'CIA Triad', url: '/cyber/CIA', icon: 'üõ°Ô∏è' },
            { name: 'PKI Infraestructura', url: '/cyber/pki', icon: 'üîë' },
            { name: 'NIST Framework', url: '/cyber/nist', icon: 'üìã' },
            { name: 'Laboratorio Interactivo', url: '/cyber/interactivo', icon: 'üß™' },
            { name: 'Redes WiFi', url: '/redes/wifi', icon: 'üì°' }
        ];
        
        const randomTopic = topics[Math.floor(Math.random() * topics.length)];
        
        // Mostrar modal con el tema aleatorio
        const modal = document.createElement('div');
        modal.className = 'random-topic-modal';
        modal.innerHTML = `
            <div class="modal-content">
                <div class="modal-header">
                    <h3>üé≤ Tema Aleatorio</h3>
                    <button onclick="this.parentElement.parentElement.parentElement.remove()" class="close-btn">√ó</button>
                </div>
                <div class="modal-body">
                    <div class="random-topic-card">
                        <span class="topic-icon">${randomTopic.icon}</span>
                        <h4>${randomTopic.name}</h4>
                        <p>¬øListo para repasar este tema?</p>
                        <div class="topic-actions">
                            <button onclick="window.location.href='${randomTopic.url}'" class="go-btn">
                                üìñ Ir al tema
                            </button>
                            <button onclick="showRandomTopic(); this.parentElement.parentElement.parentElement.parentElement.remove()" class="shuffle-btn">
                                üîÑ Otro tema
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        document.body.appendChild(modal);
        
        // Cerrar modal al hacer click fuera
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.remove();
            }
        });
    }
