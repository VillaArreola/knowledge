    }
];

let currentQuestion = 0;
let score = 0;

// Función para mostrar la pregunta actual
function showQuestion() {
    if (currentQuestion < questions.length) {
        const q = questions[currentQuestion];
        const quizDiv = document.getElementById('quiz');
        quizDiv.innerHTML = `
            <div class="question">
                <h4>Pregunta ${currentQuestion + 1}/${questions.length}</h4>
                <p>${q.question}</p>
                <div class="options">
                    ${q.options.map((option, index) => `
                        <label class="option">
                            <input type="radio" name="answer" value="${index}">
                            <span>${option}</span>
                        </label>
                    `).join('')}
                </div>
            </div>
        `;
    }
}

// Función para siguiente pregunta
function nextQuestion() {
    const selected = document.querySelector('input[name="answer"]:checked');
    if (!selected) {
        alert('Por favor selecciona una respuesta');
        return;
    }

    const q = questions[currentQuestion];
    const resultDiv = document.getElementById('result');
    
    if (parseInt(selected.value) === q.correct) {
        score++;
        resultDiv.innerHTML = `<div class="correct">✅ ¡Correcto! ${q.explanation}</div>`;
    } else {
        resultDiv.innerHTML = `<div class="incorrect">❌ Incorrecto. ${q.explanation}</div>`;
    }

    currentQuestion++;
    
    if (currentQuestion < questions.length) {
        setTimeout(() => {
            showQuestion();
            resultDiv.innerHTML = '';
        }, 3000);
    } else {
        setTimeout(() => {
            showFinalResult();
        }, 3000);
    }
}

// Función para mostrar resultado final
function showFinalResult() {
    const percentage = (score / questions.length) * 100;
    document.getElementById('quiz').innerHTML = `
        <div class="final-result">
            <h4>🎉 Quiz Completado</h4>
            <p>Tu puntuación: ${score}/${questions.length} (${percentage.toFixed(1)}%)</p>
            <button onclick="restartQuiz()" class="quiz-btn">Reiniciar Quiz</button>
        </div>
    `;
    document.getElementById('nextQuestion').style.display = 'none';
    document.getElementById('result').innerHTML = '';
}

// Función para reiniciar quiz
function restartQuiz() {
    currentQuestion = 0;
    score = 0;
    document.getElementById('nextQuestion').style.display = 'block';
    showQuestion();
}

