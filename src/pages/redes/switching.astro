.example-aspect h4 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: #a8edea;
}

.example-aspect p {
    margin-bottom: 0.5rem;
    line-height: 1.6;
}

.example-aspect strong {
    color: #fed6e3;
    display: block;
    margin-top: 0.5rem;
}

/* T√©cnica mnemot√©cnica */
.mnemonic {
    background: linear-gradient(135deg, rgba(255, 154, 158, 0.2) 0%, rgba(254, 207, 239, 0.2) 100%);
    backdrop-filter: blur(15px);
    border-radius: 15px;
    padding: 1.5rem;
    margin: 2rem 0;
    text-align: center;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
    font-size: 1.1rem;
}

/* C√≥digo de ejemplo */
.code-example {
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(15px);
    border-radius: 15px;
    padding: 2rem;
    margin: 2rem 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
}

.code-example h3 {
    margin-bottom: 1rem;
    color: #a8edea;
}

.code-example pre {
    background: rgba(0, 0, 0, 0.5);
    padding: 1.5rem;
    border-radius: 10px;
    overflow-x: auto;
    font-family: 'Fira Code', 'Courier New', monospace;
}

.code-example code {
    color: #a8edea;
    font-size: 0.9rem;
    line-height: 1.5;
}

/* Quiz */
.quiz-container {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);
    border-radius: 20px;
    padding: 2rem;
    margin: 2rem 0;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
}

.quiz-container h3 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
}

.question {
    margin-bottom: 2rem;
}

.question h4 {
    color: #a8edea;
    margin-bottom: 1rem;
}

.question p {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
}

.options {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.option {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
}

.option:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateX(5px);
}

.option input[type="radio"] {
    margin-right: 1rem;
    transform: scale(1.2);
}

.option span {
    flex: 1;
}

.quiz-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1rem;
}

.quiz-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.correct {
    background: rgba(34, 197, 94, 0.2);
    border: 1px solid rgba(34, 197, 94, 0.5);
    color: #4ade80;
    padding: 1rem;
    border-radius: 10px;
    margin-top: 1rem;
}

.incorrect {
    background: rgba(239, 68, 68, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.5);
    color: #f87171;
    padding: 1rem;
    border-radius: 10px;
    margin-top: 1rem;
}

.final-result {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 15px;
}

.final-result h4 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #a8edea;
}

.final-result p {
    font-size: 1.3rem;
    margin-bottom: 2rem;
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
}

.modal-content {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    backdrop-filter: blur(20px);
    margin: 5% auto;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    width: 90%;
    max-width: 800px;
    color: white;
    position: relative;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
}

.close {
    color: #aaa;
    float: right;
    font-size: 2rem;
    font-weight: bold;
    cursor: pointer;
    transition: color 0.3s ease;
}

.close:hover {
    color: white;
}

#modalTitle {
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: #a8edea;
}

#modalContent {
    line-height: 1.6;
}

#modalContent ul, #modalContent ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
}

#modalContent li {
    margin-bottom: 0.5rem;
}

#modalContent code {
    background: rgba(0, 0, 0, 0.3);
    padding: 0.5rem;
    border-radius: 5px;
    font-family: 'Fira Code', monospace;
    color: #a8edea;
    display: block;
    margin: 1rem 0;
    white-space: pre-line;
}

#modalContent p {
    margin-bottom: 1rem;
}

#modalContent strong {
    color: #fed6e3;
}

/* Responsive design */
@media (max-width: 768px) {
    .header h1 {
        font-size: 2.5rem;
    }
    
    .header p {
        font-size: 1rem;
    }
    
    .card {
        padding: 1.5rem;
    }
    
    .card h3 {
        font-size: 1.5rem;
    }
    
    .icon {
        font-size: 1.5rem;
        margin-right: 0.5rem;
    }
    
    .concept-item {
        padding: 0.75rem;
    }
    
    .concept-item:hover {
        transform: translateX(5px);
    }
    
    .practical-example {
        padding: 1.5rem;
    }
    
    .example-aspect {
        padding: 1rem;
    }
    
    .modal-content {
        width: 95%;
        margin: 2% auto;
        padding: 1.5rem;
    }
    
    #modalTitle {
        font-size: 1.5rem;
    }
    
    .option {
        padding: 0.75rem;
    }
    
    .quiz-btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }
}

@media (max-width: 480px) {
    .header {
        padding: 2rem 1rem;
    }
    
    .header h1 {
        font-size: 2rem;
    }
    
    .card, .practical-example, .quiz-container {
        padding: 1rem;
    }
    
    .concept-item h4 {
        font-size: 1rem;
    }
    
    .concept-item p {
        font-size: 0.9rem;
    }
}

/* Animaciones */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.card, .practical-example, .mnemonic, .code-example, .quiz-container {
    animation: fadeInUp 0.6s ease-out;
}

.concept-item {
    opacity: 0;
    animation: fadeInUp 0.4s ease-out forwards;
}

.concept-item:nth-child(2) { animation-delay: 0.1s; }
.concept-item:nth-child(3) { animation-delay: 0.2s; }
.concept-item:nth-child(4) { animation-delay: 0.3s; }