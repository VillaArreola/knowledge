    }

    .quiz-results.hidden {
        display: none;
    }

    .results-content h3 {
        font-size: 2rem;
        color: #667eea;
        margin-bottom: 1rem;
    }

    .score-display {
        font-size: 3rem;
        font-weight: 700;
        margin: 1rem 0;
        background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .quiz-results p {
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .excellent { color: #4facfe; }
    .good { color: #ffd89b; }
    .needs-improvement { color: #fa709a; }

    /* Hierarchy Diagram */
    .hierarchy-diagram {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        margin: 2rem 0;
    }

    .ca-level {
        display: flex;
        gap: 3rem;
        justify-content: center;
    }

    .ca-node {
        padding: 1.5rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
        text-align: center;
        min-width: 150px;
    }

    .ca-node:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
    }

    .ca-node span {
        font-weight: 600;
        color: white;
    }

    .root-ca .ca-node {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        font-size: 1.1rem;
    }

    .root-ca .ca-node span {
        color: #1a1a1a;
    }

    .hierarchy-lines {
        display: flex;
        gap: 4rem;
        position: relative;
        height: 30px;
    }

    .hierarchy-lines .line {
        width: 2px;
        height: 100%;
        background: linear-gradient(180deg, #667eea 0%, transparent 100%);
        position: relative;
    }

    .hierarchy-lines .line::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: -20px;
        right: -20px;
        height: 2px;
        background: #667eea;
    }

    .cross-certification {
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        border-left: 4px solid #764ba2;
    }

    .cross-certification p {
        margin: 0;
        line-height: 1.6;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .content-card {
            padding: 1.5rem;
        }

        .card-header h2 {
            font-size: 1.5rem;
        }

        .components-grid {
            grid-template-columns: 1fr;
        }

        .certificates-comparison {
            grid-template-columns: 1fr;
        }

        .process-flow {
            flex-direction: column;
        }

        .process-arrow {
            transform: rotate(90deg);
        }

        .security-features {
            grid-template-columns: 1fr;
        }

        .hierarchy-lines {
            flex-direction: column;
            gap: 1rem;
            height: auto;
        }

        .hierarchy-lines .line {
            height: 20px;
            width: 100%;
        }

        .hierarchy-lines .line::before {
            left: 0;
            right: 0;
            top: 50%;
            height: 2px;
            width: 100%;
        }

        .ca-level {
            flex-direction: column;
            gap: 1rem;
        }

        .quiz-controls {
            flex-direction: column;
            gap: 1rem;
        }
    }

    /* Animation utilities */
    .animate-slide-up {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s ease;
    }

    .animate-slide-up.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Loading animation for interactive elements */
    @keyframes shimmer {
        0% {
            background-position: -200px 0;
        }
        100% {
            background-position: calc(200px + 100%) 0;
        }
    }

    .loading {
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        background-size: 200px 100%;
        animation: shimmer 1.5s infinite;
    }