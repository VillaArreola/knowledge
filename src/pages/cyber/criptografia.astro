        margin: 20px 0;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    
    .comparison-table th {
        background: linear-gradient(45deg, #667eea, #764ba2);
        color: white;
        padding: 15px;
        text-align: left;
        font-weight: 600;
    }
    
    .comparison-table td {
        padding: 15px;
        border-bottom: 1px solid #e2e8f0;
    }
    
    .comparison-table tr:nth-child(even) {
        background: #f7fafc;
    }
    
    .encryption-demo {
