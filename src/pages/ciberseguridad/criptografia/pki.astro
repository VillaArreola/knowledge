<style>
    /* Hero Section */
    .hero-section {
        min-height: 60vh;
        display: flex;
        align-items: center;
        position: relative;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        opacity: 0.9;
    }

    .security-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: pulse-security 2s ease-in-out infinite;
    }

    @keyframes pulse-security {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 300;
    }

    /* Content Cards */
    .content-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .content-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .card-header h2 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .highlight {
        background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 600;
    }

    /* Security Features */
    .security-features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        transition: all 0.3s ease;
    }

    .feature-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-3px);
    }

    .feature-icon {
        font-size: 2rem;
        filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
    }

    /* Components Grid */
    .components-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .component-card {
        padding: 2rem;
        border-radius: 15px;
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .ca-card {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
    }

    .ra-card {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    }

    .directory-card {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
    }

    .entity-card {
        background: linear-gradient(135deg, #d299c2 0%, #fef9d7 100%);
    }

    .component-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .component-card h3 {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
    }

    .component-card p {
        font-weight: 600;
        color: #2a2a2a;
        margin-bottom: 1rem;
    }

    .component-desc {
        color: #4a4a4a;
        font-size: 0.9rem;
    }

    /* Certificate Types */
    .certificates-comparison {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .cert-type {
        padding: 2rem;
        border-radius: 15px;
        transition: all 0.3s ease;
    }

    .with-keys {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .without-keys {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }

    .cert-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .cert-header h3 {
        color: #1a1a1a;
        font-size: 1.5rem;
        font-weight: 600;
    }

    .cert-status {
        font-size: 1.5rem;
    }

    .cert-type p {
        color: #2a2a2a;
        font-weight: 500;
    }

    .standard-note {
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        border-left: 4px solid #667eea;
    }

    .x509-fields {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1rem;
    }

    .x509-fields span {
        padding: 0.5rem 1rem;
        background: rgba(102, 126, 234, 0.2);
        border-radius: 20px;
        font-size: 0.9rem;
        border: 1px solid rgba(102, 126, 234, 0.3);
    }

    /* Process Flow */
    .process-flow {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        gap: 2rem;
        margin: 2rem 0;
    }

    .process-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 200px;
        text-align: center;
    }

    .step-number {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .step-content h3 {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #667eea;
    }

    .process-arrow {
        font-size: 2rem;
        color: #667eea;
        font-weight: bold;
    }

    /* Hierarchy Diagram */
    .hierarchy-diagram {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        margin: 2rem 0;
    }

    .ca-level {
        display: flex;
        gap: 3rem;
        justify-content: center;
    }

    .ca-node {
        padding: 1.5rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
        text-align: center;
        min-width: 150px;
    }

    .ca-node:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
    }

    .ca-node span {
        font-weight: 600;
        color: white;
    }

    .root-ca .ca-node {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        font-size: 1.1rem;
    }

    .root-ca .ca-node span {
        color: #1a1a1a;
    }

    .hierarchy-lines {
        display: flex;
        gap: 4rem;
        position: relative;
        height: 30px;
    }

    .hierarchy-lines .line {
        width: 2px;
        height: 100%;
        background: linear-gradient(180deg, #667eea 0%, transparent 100%);
        position: relative;
    }

    .hierarchy-lines .line::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: -20px;
        right: -20px;
        height: 2px;
        background: #667eea;
    }

    .cross-certification {
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        border-left: 4px solid #764ba2;
    }

    .cross-certification p {
        margin: 0;
        line-height: 1.6;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .content-card {
            padding: 1.5rem;
        }

        .card-header h2 {
            font-size: 1.5rem;
        }

        .components-grid {
            grid-template-columns: 1fr;
        }

        .certificates-comparison {
            grid-template-columns: 1fr;
        }

        .process-flow {
            flex-direction: column;
        }

        .process-arrow {
            transform: rotate(90deg);
        }

        .security-features {
            grid-template-columns: 1fr;
        }

        .hierarchy-lines {
            flex-direction: column;
            gap: 1rem;
            height: auto;
        }

        .hierarchy-lines .line {
            height: 20px;
            width: 100%;
        }

        .hierarchy-lines .line::before {
            left: 0;
            right: 0;
            top: 50%;
            height: 2px;
            width: 100%;
        }

        .ca-level {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>