---

<WikiLayout title={title} description={description}>
  <div class="content-wrapper">
    <header class="topic-header">
      <h1>{metadata.icon} {metadata.title}</h1>
      <p class="topic-description">{metadata.description}</p>
      
      {metadata.certifications && metadata.certifications.length > 0 && (
        <div class="certifications-badge">
          <span class="badge-label">Certificaciones:</span>
          {metadata.certifications.map(cert => (
            <span class="cert-badge">
              {cert.name} (Peso: {cert.weight})
