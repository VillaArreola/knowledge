    @media (max-width: 768px) {
        .quick-access-bar {
            flex-direction: column;
            align-items: stretch;
        }
        
        .search-container {
            min-width: auto;
        }
        
        .quick-actions {
            justify-content: center;
        }
        
        .stats-mini-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .knowledge-grid {
            grid-template-columns: 1fr;
        }
        
        .certifications-grid {
            grid-template-columns: 1fr;
        }
        
        .footer-stats {
            flex-direction: column;
            gap: 20px;
        }
    }
    
    @media (max-width: 480px) {
        .container {
            padding: 15px;
        }
        
